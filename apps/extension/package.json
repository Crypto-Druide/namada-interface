{
  "name": "@anoma/extension",
  "version": "0.1.0",
  "description": "Anoma Browser Extension",
  "repository": "https://github.com/anoma/namada-interface/",
  "author": "Heliax Dev <info@heliax.dev>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf ./build",
    "start": "yarn start:chrome",
    "start:chrome": "yarn clean && TARGET=chrome NODE_ENV=development parcel watch ./src/browsers/chrome/manifest.json --host localhost -p 5000 --dist-dir ./build/chrome",
    "start:firefox": "yarn clean && TARGET=browser NODE_ENV=development parcel watch ./src/browsers/firefox/manifest.json --host localhost -p 5000 --dist-dir ./build/browser",
    "bundle": "yarn clean && yarn bundle:chrome && yarn bundle:firefox",
    "bundle:chrome": "TARGET=chrome NODE_ENV=development parcel build ./src/browsers/chrome/manifest.json --dist-dir ./build/chrome",
    "bundle:browser": "TARGET=browser NODE_ENV=development parcel build ./src/browsers/firefox/manifest.json --dist-dir ./build/browser",
    "build": "yarn clean && yarn build:chrome && yarn build:firefox",
    "build:chrome": "TARGET=chrome NODE_ENV=production parcel build ./src/browsers/chrome/manifest.json --no-source-maps --dist-dir ./build/chrome",
    "build:firefox": "TARGET=browser NODE_ENV=production parcel build ./src/browsers/firefox/manifest.json --no-source-maps --dist-dir ./build/browser && web-ext build --s ./build/browser -a ./build/firefox",
    "lint": "npx eslint src --ext .ts",
    "lint:fix": "yarn lint -- --fix",
    "test": "yarn jest",
    "test:watch": "yarn jest --watchAll=true"
  },
  "dependencies": {
    "@anoma/crypto": "0.1.0",
    "@anoma/rpc": "0.1.0",
    "@anoma/storage": "0.1.0",
    "@anoma/tx": "0.1.0",
    "@anoma/types": "0.1.0",
    "@anoma/utils": "0.1.0",
    "@anoma/wallet": "0.1.0",
    "aes-js": "^3.1.2",
    "pbkdf2": "^3.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^5.3.5",
    "typescript": "^4.8.2",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.7.0",
    "@types/aes-js": "^3.1.1",
    "@types/chrome": "^0.0.196",
    "@types/firefox-webext-browser": "^94.0.1",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.14",
    "@types/pbkdf2": "^3.1.0",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.26",
    "@types/webextension-polyfill": "^0.9.0",
    "babel-plugin-styled-components": "^2.0.7",
    "eslint": "^8.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "jest": "^29.0.1",
    "parcel": "^2.7.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1"
  },
  "@parcel/bundler-default": {
    "maxParallelRequests": 20
  }
}
