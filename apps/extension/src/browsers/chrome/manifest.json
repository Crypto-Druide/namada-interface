{
  "manifest_version": 3,
  "name": "Anoma Extension",
  "description": "The Anoma Extension manages a user's wallet for the Anoma ecosystem.",
  "version": "0.1.0",
  "background": {
    "service_worker": "../../background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["../../content/index.ts"]
    }
  ],
  "action": {
    "default_popup": "../../static/popup.html"
  },
  "permissions": ["storage", "notifications", "identity"],
  "sandbox": {
    "pages": ["../../static/sandbox.html"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",
    "sandbox": "sandbox allow-scripts; script-src 'self' 'wasm-unsafe-eval'"
  },
  "web_accessible_resources": [
    {
      "resources": ["scripts/inject.ts"],
      "matches": ["<all_urls>"]
    }
  ]
}
