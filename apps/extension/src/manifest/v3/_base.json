{
  "manifest_version": 3,
  "name": "Anoma Extension",
  "description": "The Anoma Extension manages a user's wallet for the Anoma ecosystem.",
  "version": "0.1.0",
  "background": {
    "service_worker": "background.anoma.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.anoma.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "notifications", "identity"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.anoma.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
