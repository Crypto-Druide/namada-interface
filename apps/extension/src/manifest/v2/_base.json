{
  "manifest_version": 2,
  "name": "Anoma Extension",
  "description": "The Anoma Extension manages a user's wallet for the Anoma ecosystem.",
  "version": "0.1.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Anoma Extension"
  },
  "background": {
    "scripts": ["background.anoma.js"],
    "persistent": true
  },
  "permissions": ["storage", "notifications", "identity"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.anoma.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": ["injected.anoma.js"]
}
