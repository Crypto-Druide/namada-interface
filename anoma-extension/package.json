{
  "name": "anoma-extension",
  "displayName": "Anoma Keychain",
  "version": "0.0.1",
  "description": "[description]",
  "private": true,
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:web dev:prepare dev:js",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "dev:res": "rescript build -with-deps -w",
    "build": "cross-env NODE_ENV=production run-s clear build:res build:web build:prepare build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "build:pages": "vite build --config vite.config.pages.ts",
    "build:res": "rescript build -with-deps",
    "pack": "cross-env NODE_ENV=production run-p pack:chromium pack:firefox pack:zip",
    "pack:chromium": "crx pack extension -o ./chromium.crx",
    "pack:firefox": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename firefox.xpi --overwrite-dest",
    "pack:zip": "rimraf extension.zip && jszip-cli add firefox.xpi chrome.crx -o ./extension.zip",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf extension/dist extension/manifest.json extension.*",
    "lint": "eslint '{src,scripts}/**/*.{json,ts,js}'"
  },
  "devDependencies": {
    "@ffflorian/jszip-cli": "^3.1.5",
    "@types/fs-extra": "^9.0.12",
    "@types/glob": "^7.1.4",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/webextension-polyfill": "^0.8.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "autoprefixer": "^10.3.5",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^7.32.0",
    "esno": "^0.9.1",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "kolorist": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.7",
    "rescript": "^9.1.4",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.15",
    "typescript": "^4.4.2",
    "unplugin-auto-import": "^0.4.6",
    "vite": "^2.6.14",
    "web-ext": "^6.3.0",
    "webextension-polyfill": "^0.8.0"
  },
  "dependencies": {
    "@dusty-phillips/rescript-dexie": "^0.3.3",
    "@heliaxdev/rescript-react-feather": "^2.0.9-3",
    "@metamask/browser-passworder": "^3.0.0",
    "@rescript/react": "^0.10.3",
    "@ryyppy/rescript-promise": "^2.1.0",
    "@vitejs/plugin-react": "^1.0.9",
    "anoma": "workspace:0.1.0",
    "bip39": "^3.0.4",
    "buffer": "^6.0.3",
    "dexie": "^3.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rescript-classnames": "^6.0.0",
    "samba-whiskey": "workspace:0.1.0",
    "webext-bridge": "npm:@heliaxdev/webext-bridge@^5.0.3"
  }
}
